{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ApimServiceName": {
      "type": "string"
    },
    "PolicyXMLBaseUrl": {
      "type": "string"
    }
  },
  "resources": [
    {
      "properties": {
        "description": "Career Circle Partner API",
        "subscriptionRequired": true,
        "approvalRequired": true,
        "state": "published",
        "displayName": "Career Circle Partner"
      },
      "name": "[concat(parameters('ApimServiceName'), '/career-circle-partner')]",
      "type": "Microsoft.ApiManagement/service/products",
      "apiVersion": "2019-01-01"
    },
    {
      "properties": {
        "description": "Administrators is a built-in group. Its membership is managed by the system. Microsoft Azure subscription administrators fall into this group.",
        "displayName": "Administrators",
        "type": "system",
        "builtIn": true
      },
      "name": "[concat(parameters('ApimServiceName'), '/career-circle-partner/administrators')]",
      "type": "Microsoft.ApiManagement/service/products/groups",
      "apiVersion": "2019-01-01",
      "dependsOn": [
        "[resourceId('Microsoft.ApiManagement/service/products', parameters('ApimServiceName'), 'career-circle-partner')]"
      ]
    },
    {
      "properties": {
        "description": "Developers is a built-in group. Its membership is managed by the system. Signed-in users fall into this group.",
        "displayName": "Developers",
        "type": "system",
        "builtIn": true
      },
      "name": "[concat(parameters('ApimServiceName'), '/career-circle-partner/developers')]",
      "type": "Microsoft.ApiManagement/service/products/groups",
      "apiVersion": "2019-01-01",
      "dependsOn": [
        "[resourceId('Microsoft.ApiManagement/service/products', parameters('ApimServiceName'), 'career-circle-partner')]"
      ]
    },
    {
      "properties": {
        "description": "Guests is a built-in group. Its membership is managed by the system. Unauthenticated users visiting the developer portal fall into this group.",
        "displayName": "Guests",
        "type": "system",
        "builtIn": true
      },
      "name": "[concat(parameters('ApimServiceName'), '/career-circle-partner/guests')]",
      "type": "Microsoft.ApiManagement/service/products/groups",
      "apiVersion": "2019-01-01",
      "dependsOn": [
        "[resourceId('Microsoft.ApiManagement/service/products', parameters('ApimServiceName'), 'career-circle-partner')]"
      ]
    }
  ]
}